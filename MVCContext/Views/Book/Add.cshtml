@model MVCContext.Models.ORM.Book
<style>
body {font-family: Arial, Helvetica, sans-serif;}
* {box-sizing: border-box;}

input[type=text], select, textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  margin-top: 6px;
  margin-bottom: 16px;
  resize: vertical;
}

input[type=submit] {
  background-color: #04AA6D;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}



.container {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
}
</style>
<form action ="/Book/Add " method="post">
    <div>
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name)
    </div>   
    <div>
        @Html.LabelFor(x => x.Writer)
        @Html.TextBoxFor(x => x.Writer)
    </div>  
    <div>
        @Html.LabelFor(x => x.Description)
        @Html.TextAreaFor(x => x.Description)
    </div>
    <div>
        <input type="submit" name="add" />
    </div>
</form>